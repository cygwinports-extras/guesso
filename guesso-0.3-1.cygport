inherit qt3-qmake

DESCRIPTION="Qt guess-the-number game"
HOMEPAGE="http://kde-apps.org/content/show.php?content=30673"
SRC_URI="http://kde-apps.org/CONTENT/content-files/30673-${P}.tar.gz"
SRC_DIR=${PN}

PATCH_URI="0.3-gcc43.patch"

src_install() {
	cd ${B}
	dobin ${PN}.exe
	insinto /usr/share/${PN}/translation
	doins translation/*.ts
}
